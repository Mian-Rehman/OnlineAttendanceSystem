        <activity android:name=".AdminDashboard" />
        <activity android:name=".AdminLoginScreen" />
        <activity android:name=".TeacherLoginScreen" />
        <activity android:name=".StudentLoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConfirmScreen" />
        <activity android:name=".MainActivity" >

        </activity>
    </application>

</manifest>