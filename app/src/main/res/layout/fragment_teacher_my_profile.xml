<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherMyProfileFrag">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="20dp"
       android:gravity="center"
       android:layout_marginTop="10dp"
       >

       <ImageView
           android:id="@+id/img_student"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:layout_marginTop="10dp"
           android:src="@drawable/profile"
           />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="10dp"
           android:layout_marginTop="10dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Teacher Name:"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:fontFamily="sans-serif-black"
               />
           <TextView
               android:id="@+id/tv_teacher_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Rehman Amjad"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:layout_marginLeft="20dp"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="10dp"
           android:layout_marginTop="5dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Teacher ID:"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:fontFamily="sans-serif-black"
               />
           <TextView
               android:id="@+id/tv_teacher_Id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="123"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:layout_marginLeft="43dp"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="10dp"
           android:layout_marginTop="5dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Teacher Email:"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:fontFamily="sans-serif-black"
               />
           <TextView
               android:id="@+id/tv_teacher_email"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="rehmanamjid@yahoo.com"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:layout_marginLeft="20dp"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="10dp"
           android:layout_marginTop="5dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Teacher DOB:"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:fontFamily="sans-serif-black"
               />
           <TextView
               android:id="@+id/tv_teacher_DOB"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="02/02/2000"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:layout_marginLeft="29dp"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="10dp"
           android:layout_marginTop="5dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Teacher Qualification:"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:fontFamily="sans-serif-black"
               />

           <TextView
               android:id="@+id/tv_teacher_Qual"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:text="MPHIL"
               android:textColor="@color/black"
               android:textSize="14sp" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="10dp"
           android:layout_marginTop="5dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Teacher Password:"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:fontFamily="sans-serif-black"
               />
           <TextView
               android:id="@+id/tv_teacher_pass"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1234"
               android:textSize="14sp"
               android:textColor="@color/black"
               android:layout_marginLeft="10dp"
               />
       </LinearLayout>

   </LinearLayout>

</RelativeLayout>